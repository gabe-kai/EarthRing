# EarthRing Web Client Configuration
# Copy this file to .env.local and update with your values

# Server Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080
VITE_API_VERSION=v1

# Client Configuration
VITE_CLIENT_VERSION=1.0.0
VITE_DEBUG=true

# Rendering Configuration
VITE_CHUNK_LOAD_DISTANCE=5
VITE_CHUNK_UNLOAD_DISTANCE=7
VITE_LOD_DISTANCE_1=1000
VITE_LOD_DISTANCE_2=5000
VITE_LOD_DISTANCE_3=10000
VITE_MAX_FPS=60
VITE_ENABLE_SHADOWS=true
VITE_SHADOW_MAP_SIZE=2048

# Network Configuration
VITE_API_TIMEOUT=30000
VITE_RECONNECT_ATTEMPTS=5
VITE_RECONNECT_DELAY=3000
VITE_HEARTBEAT_INTERVAL=30000
